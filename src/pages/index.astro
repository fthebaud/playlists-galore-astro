---
import { getCollection } from "astro:content";
import PageLayout from "@src/layouts/PageLayout.astro";
import PlaylistLink from "@src/components/PlaylistLink/PlaylistLink.astro";

const allPlaylists = await getCollection("playlists");
---

<PageLayout pageTitle="Home Page">
  <!-- // COLLECTION STEP 3: Index collection entries -->
  <ul>
    {
      allPlaylists.map((entry) => (
        <PlaylistLink
          url={`/playlists/${entry.data.lastUpdate}/`}
          playlist={entry.data}
        />
      ))
    }
  </ul>
</PageLayout>

<style>
  ul {
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
