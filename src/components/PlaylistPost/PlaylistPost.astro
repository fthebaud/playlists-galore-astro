---
import type { CollectionEntry } from "astro:content";
import TidalLogo from "@src/assets/Tidal.svg";
import DeezerLogo from "@src/assets/Deezer.svg";
import YoutubeMusicLogo from "@src/assets/YoutubeMusic.svg";
import SpotifyLogo from "@src/assets/Spotify.svg";

interface Props {
  playlist: CollectionEntry<"playlists">["data"];
}

const { playlist } = Astro.props;
---

<div class="container">
  <img src={playlist.images[0].url} />
  <div class="info-container">
    <div class="text-container">
      <div>{playlist.name}</div>
      <div>
        <div>{`Date: ${playlist.lastUpdate}`}</div>
        <div>{`Tracks: ${playlist.totalTracks}`}</div>
      </div>
    </div>
    <div class="links-container">
      <a
        href={playlist.url.tidal}
        target="_blank"
        rel="noopener noreferrer"
        title="Tidal"
      >
        <TidalLogo />
      </a>
      <a
        href={playlist.url.deezer}
        target="_blank"
        rel="noopener noreferrer"
        title="Deezer"
      >
        <DeezerLogo />
      </a>
      <a
        href={playlist.url.youtube}
        target="_blank"
        rel="noopener noreferrer"
        title="Youtube Music"
      >
        <YoutubeMusicLogo />
      </a>
      <a
        href={playlist.url.spotify}
        target="_blank"
        rel="noopener noreferrer"
        title="Spotify"
      >
        <SpotifyLogo />
      </a>
    </div>
  </div>
</div>

<style>
  .container {
    border: 1px solid;
    border-color: black;
    max-width: 500px;
  }

  html.dark .container {
    border-color: white;
  }

  .info-container {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .text-container {
    display: flex;
    justify-content: space-between;
  }

  .links-container {
    display: flex;
    justify-content: space-between;
  }

  a {
    width: 80px;
  }
</style>
